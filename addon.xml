<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.watchmelater"
       name="Watch Me Later"
       version="0.0.2"
       provider-name="Johan Wieslander">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Watch Me Later</summary>
    <description>Plugin that allows you to browse a rss feed of links to You Tube and Vimeo</description>
    <disclaimer>This addon requires the youtube and vimeo plugin to work as intended.</disclaimer>
  </extension>
</addon>
